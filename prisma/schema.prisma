// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String @id @default(cuid())
  name        String
  description String
  image       String
  price       Float  @default(0.00)

  @@map("products")
}

model User {
  id String @id @default(cuid())

  email String @unique
  hash  String

  firstName String?
  lastName  String?
  role Role @default(USER)

  @@map("users")
}

enum Role {
  USER
  ADMIN
}
